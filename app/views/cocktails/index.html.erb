<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://res.cloudinary.com/dnasixvno/image/upload/v1544723130/michael-discenza-199756-unsplash.jpg');">
  <div class="banner-box">
    <div class="banner-content">
      <h1>Liqourdinate</h1>
      <h2>Create your personalised cocktail recipe list.</h2>
      <div class="add-cocktail-header"><%= link_to "Add yours!", new_cocktail_path, class: 'btn-add'  %></div>
      <div class="icon-box">
      <i class="fas fa-cocktail" style="color: white;"></i>
    </div>
    </div>
  </div>
</div>


<div class="container">
  <% @cocktails.each do |cocktail| %>
  <div class="row">
    <div class="col-xs-12 col-sm-4">
      <div class="cocktail-card">
      <%= cl_image_tag cocktail.photo, height: 500, width: 350, crop: :fill, class: 'cocktail-card-pic' %>
      <%= link_to cocktail.name, cocktail %>
      </div>
    </div>
  <% end %>
  </div>
</div>

