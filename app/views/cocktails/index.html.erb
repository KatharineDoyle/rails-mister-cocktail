<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://munchies-images.vice.com/wp_upload/rosesharon.jpg?crop=0.7111111111111111xw%3A1xh%3Bcenter%2Ccenter&resize=2000%3A*');">
  <div class="banner-content">
    <h1>Liqourdinate</h1>
  <p><%= link_to "Add a cocktail", new_cocktail_path  %></p>
  </div>
</div>


<div class="container">
 <ul>
  <% @cocktails.each do |cocktail| %>
  <li>
    <div class="row">
        <div class="card"
        style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
        url("<%= cl_image_path "#{cocktail.photo.nil? ? 'cocktail_1' : cocktail.photo}", height: 300, width: 400, crop: :fill %>")">
        <div class="col-xs12 col-sm-4">
        <%= link_to cocktail.name, cocktail %>
          <% end %>
      </div>
    </div>
  </div>
</li>
</ul>
</div>
