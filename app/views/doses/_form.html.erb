<div class="form-container">
  <%= simple_form_for ([@cocktail, @dose]) do |f| %>
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <div class="form-box">
        <div class="form-content">
          <h1>Tell us your cocktail secrets...</h1>
          <div class="icon-box">
           <img src="https://res.cloudinary.com/dnasixvno/image/upload/v1545561951/noun_Margarita_872924.png" class="icon">
           <img src="https://res.cloudinary.com/dnasixvno/image/upload/v1545562060/noun_Drink_872916_copy.png" class="icon">
           <img src="https://res.cloudinary.com/dnasixvno/image/upload/v1545561966/noun_drinks_1264540.png" class="icon">
         </div>
         <%= f.input :description, label: "Amount"  %>
         <%= f.association :ingredient %>
         <%= f.button :submit, class: 'btn-add' %>
       </div>
      </div>
     </div>
       <% end %>
   </div>
 </div>
